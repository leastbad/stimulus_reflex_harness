<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<h3>Comments</h3>

<div id="comments">
  <% @comments.each do |comment| %>
  <p><%= comment.body %></p>
  <% end %>
</div>

<%= form_with model: @posts, data: { reflex: "submit->Comments#add"} do |form| %>
  <%= form.text_field :body %>
  <%= form.submit %>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
